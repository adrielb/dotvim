snippet target "make target" b
${1:target}: ${2:deps}
	echo "First dependency: " $< 
	echo "All dependencies" $^ 
	echo "output target: " $@
	echo "stem of pattern" $\*
endsnippet

snippet targetusual "some usual targets" b
all:
	echo "all"

clean:
	echo "clean"

check:
	echo "check"

.PHONY: all clean check
.SUFFIXES:
.SECONDARY:
endsnippet

snippet targetdir "directory target" b
%.o: %.cpp | .deps
	$(CXX) $(CXXFLAGS) -c -o $@ $< -MMD -MP -MF .deps/$*.d
.deps:
	mkdir .deps
-include .deps/*.d
endsnippet

snippet targetjulia "some julia targets" b
mem: prof-mem.jl
	julia --track-allocation=user \$<

profile: /tmp/timing-profile.txt
	awk '{ print \$\$4" "\$\$2" "\$\$1" "\$\$3; }' \$<
	# cat \$

test:
	julia runtests.jl

capture:
	@tmux capture-pane -p -S -20 -J | \
	awk -v RS='julia> ' '\
		BEGIN { ORS=RS } \
			{b=a; a=\$\$0} \
		END { print b } '

clean:
	rm *.jl.mem

tags:
	ctags-exuberant -R --totals=yes --languages=julia

.PHONY: mem profile test capture clean tags
endsnippet
